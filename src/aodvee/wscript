## -*- Mode: python; py-indent-offset: 4; indent-tabs-mode: nil; coding: utf-8; -*-

def build(bld):
    module = bld.create_ns3_module('aodvee', ['internet', 'wifi'])
    module.includes = '.'
    module.source = [
        'model/aodvee-id-cache.cc',
        'model/aodvee-dpd.cc',
        'model/aodvee-rtable.cc',
        'model/aodvee-rqueue.cc',
        'model/aodvee-packet.cc',
        'model/aodvee-neighbor.cc',
        'model/aodvee-routing-protocol.cc',
        'helper/aodvee-helper.cc',
        ]

    aodv_test = bld.create_ns3_module_test_library('aodv_eo')
    aodv_test.source = [
        'test/aodvee-id-cache-test-suite.cc',
        'test/aodvee-test-suite.cc',
        'test/aodvee-regression.cc',
        'test/bug-772.cc',
        'test/loopback.cc',
        ]

    headers = bld(features='ns3header')
    headers.module = 'aodvee'
    headers.source = [
        'model/aodvee-id-cache.h',
        'model/aodvee-dpd.h',
        'model/aodvee-rtable.h',
        'model/aodvee-rqueue.h',
        'model/aodvee-packet.h',
        'model/aodvee-neighbor.h',
        'model/aodvee-routing-protocol.h',
        'helper/aodvee-helper.h',
        ]

    if bld.env['ENABLE_EXAMPLES']:
        bld.recurse('examples')

    bld.ns3_python_bindings()
